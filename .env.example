# Copy to .env and adjust values

# === Geo-targeting Configuration ===
DEFAULT_COUNTRY=PE
# Supported: PE, ES, MX, AR, CO, CL, US, GLOBAL

# === Google Trends Settings ===
GOOGLE_TRENDS_HL=es
GOOGLE_TRENDS_TZ=360

# === Rate Limiting ===
REQUEST_DELAY_MIN=1
REQUEST_DELAY_MAX=3
MAX_RETRIES=3
PARALLEL_SEMAPHORE_LIMIT=5

# === Database ===
DATABASE_PATH=keywords.db

# === Advanced Scoring System ===
TARGET_INTENT=transactional
# Options: transactional, commercial, informational

# Ensemble weights (must sum to 1.0)
WEIGHT_TREND=0.28
WEIGHT_VOLUME=0.22
WEIGHT_SERP_OPPORTUNITY=0.15
WEIGHT_CLUSTER_CENTRALITY=0.12
WEIGHT_INTENT=0.10
WEIGHT_GEO=0.08
WEIGHT_FRESHNESS=0.05

# Intent weights
INTENT_WEIGHT_TRANSACTIONAL=1.0
INTENT_WEIGHT_COMMERCIAL=0.7
INTENT_WEIGHT_INFORMATIONAL=0.4

# === Export Settings ===
TOP_KEYWORDS_LIMIT=20
EXPORT_FORMATS=csv,pdf

# === HTTP Settings ===
HTTP2_ENABLED=true
BROTLI_COMPRESSION=true
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
