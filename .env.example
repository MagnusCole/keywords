# Google Ads API credentials
# Copy to .env and fill with your values to enable real search volumes
# Get these from your Google Ads API Center: https://ads.google.com/aw/developer/api_center

# Your approved Developer Token (from API Center)
GOOGLE_ADS_DEVELOPER_TOKEN=""

# OAuth2 credentials (from Google Cloud Console)
GOOGLE_ADS_CLIENT_ID=""             # Format: xxxxx.googleusercontent.com
GOOGLE_ADS_CLIENT_SECRET=""         

# OAuth2 refresh token (generated during authentication flow)
GOOGLE_ADS_REFRESH_TOKEN=""

# Your Google Ads Customer ID (format: 123-456-7890)
GOOGLE_ADS_CUSTOMER_ID=""           # e.g., 1234567890 (without dashes)

# Manager Account ID (based on your approval email: 426-486-7852)
GOOGLE_ADS_LOGIN_CUSTOMER_ID="426-486-7852"

# Cache settings for API responses
ADS_CACHE_TTL_DAYS=7

# Default geo/language (override via CLI)
DEFAULT_GEO="PE"
DEFAULT_LANGUAGE="es"

# === Configuración de scoring (BUSINESS OPTIMIZED) ===
# Pesos para el cálculo de scores (deben sumar 1.0)
SCORING_WEIGHT_TREND=0.20          # Reduced: trend ≠ business value
SCORING_WEIGHT_VOLUME=0.18         # Reduced: volume bias problem
SCORING_WEIGHT_INTENT=0.25         # INCREASED: business relevance priority
SCORING_WEIGHT_GEO=0.15            # INCREASED: local market focus
SCORING_WEIGHT_SERP=0.12           # Competition difficulty
SCORING_WEIGHT_CLUSTER=0.05        # Semantic grouping
SCORING_WEIGHT_FRESHNESS=0.05      # Trending terms

# Target de intención para scoring (CRITICAL FOR BUSINESS)
SCORING_TARGET_INTENT=transactional  # transactional, commercial, informational

# Geo target para scoring
SCORING_TARGET_GEO=PE  # PE, ES, MX, AR, CO, CL

# === Rate Limiting ===
REQUEST_DELAY_MIN=1
REQUEST_DELAY_MAX=3
MAX_RETRIES=3
PARALLEL_SEMAPHORE_LIMIT=5

# === Database ===
DATABASE_PATH=keywords.db

# === Advanced Scoring System ===
TARGET_INTENT=transactional
# Options: transactional, commercial, informational

# Ensemble weights (must sum to 1.0)
WEIGHT_TREND=0.28
WEIGHT_VOLUME=0.22
WEIGHT_SERP_OPPORTUNITY=0.15
WEIGHT_CLUSTER_CENTRALITY=0.12
WEIGHT_INTENT=0.10
WEIGHT_GEO=0.08
WEIGHT_FRESHNESS=0.05

# Intent weights
INTENT_WEIGHT_TRANSACTIONAL=1.0
INTENT_WEIGHT_COMMERCIAL=0.7
INTENT_WEIGHT_INFORMATIONAL=0.4

# === Export Settings ===
TOP_KEYWORDS_LIMIT=20
EXPORT_FORMATS=csv,pdf

# === HTTP Settings ===
HTTP2_ENABLED=true
BROTLI_COMPRESSION=true
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
